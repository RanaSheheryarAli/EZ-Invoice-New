<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_box_outline_edt"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signature"
        android:textColor="#007F80"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp" />

    <!-- Sign Now -->
    <LinearLayout
        android:id="@+id/sign_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/autograph"
            android:layout_marginEnd="12dp"
            app:tint="#1D2A53" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Now"
            android:textColor="#1D2A53"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Choose From Gallery -->
    <LinearLayout
        android:id="@+id/choose_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/file_upload_24"
            android:layout_marginEnd="12dp"
            app:tint="#1D2A53" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose From Gallery"
            android:textColor="#1D2A53"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Take Photo -->
    <LinearLayout
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/camera"
            android:layout_marginEnd="12dp"
            app:tint="#1D2A53" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Photo"
            android:textColor="#1D2A53"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Cancel Button -->
    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textColor="#007F80"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginTop="12dp" />
</LinearLayout>
