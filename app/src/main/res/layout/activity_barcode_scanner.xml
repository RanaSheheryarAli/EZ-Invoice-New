<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".Scan_Barcode">

                <LinearLayout
                    android:id="@+id/colom_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textColor="@color/scendory_input_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textColor="@color/scendory_input_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/scendory_input_text" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/showproductsRCV"
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    tools:listitem="@layout/product_items"

                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnnext"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/buttoncolor"
                    android:elevation="4dp"
                    android:letterSpacing="0.1"
                    android:padding="12dp"
                    android:visibility="invisible"
                    android:background="@drawable/rounded_box"
                    android:text="Next"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    android:layout_marginBottom="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textStyle="bold"
                    app:cornerRadius="8dp" />


            </LinearLayout>
        </ScrollView>




        <FrameLayout
            android:id="@+id/StartScanning"
            android:layout_width="64dp"
            android:layout_height="65dp"
            android:layout_gravity="bottom"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:layout_marginBottom="-20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_down"
                app:shapeAppearanceOverlay="@style/FABShape" />
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>


