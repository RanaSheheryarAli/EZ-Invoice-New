<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="#F6F8FB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResetPassword">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvResetPasswordTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="4dp"
                    android:text="Reset Password"
                    android:textColor="@color/imp_text_color"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvResetPasswordSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="Enter your new password twice below to reset a new password"
                    android:textColor="#5F6368" />

                <!-- Enter New Password Field -->
                <TextView
                    android:id="@+id/tvEnterNewPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="8dp"
                    android:text="Enter new password"
                    android:textColor="#1B1F3B"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:paddingEnd="12dp">

                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_outline_edt"
                        android:hint="Enter new password"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:textColorHint="#A0A4A8" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvReEnterPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="Re-enter new password"
                    android:textColor="#1B1F3B"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:paddingEnd="12dp">

                    <EditText
                        android:id="@+id/etReEnterPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_outline_edt"
                        android:hint="Re-enter new password"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:textColorHint="#A0A4A8" />

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/buttoncolor"
                    android:elevation="4dp"
                    android:letterSpacing="0.1"
                    android:padding="15dp"
                    android:text="Reset Password"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:cornerRadius="8dp" />


            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>