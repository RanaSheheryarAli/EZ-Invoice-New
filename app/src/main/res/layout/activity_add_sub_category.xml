<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.ezinvoice.viewmodels.AddSubcategoryViewmodel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddSubCategory">


        <include
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/appbar" />

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubCatagory Name"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/primery_input_text"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            tools:layout_editor_absoluteX="99dp" />

        <LinearLayout
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"

            android:background="@drawable/rounded_box_outline_edt"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvname"
            android:padding="5dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_box"
                android:hint="Name"
                android:text="@={viewmodel.subcategoryMLD}"
                android:padding="12dp"
                android:textSize="12sp"
                android:textColor="#333333"
                android:textColorHint="#B0B0B0" />



        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            app:layout_constraintTop_toBottomOf="@+id/edt"
            android:id="@+id/BtnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/buttoncolor"
            android:elevation="4dp"
            android:onClick="@{()->viewmodel.Onaddsubcategory()}"
            android:letterSpacing="0.1"
            android:padding="12dp"
            android:background="@drawable/rounded_box"
            android:text="Add Category"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="8dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>